<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xwy.calculator.hex">

    <EditText
        android:id="@+id/after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="2"
        android:inputType="number"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/hintresult"
        android:text="Result:"
        android:textSize="20dp"
        android:layout_below="@id/after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@id/hintresult"/>

    <Button
        android:id="@+id/calculationhex"
        android:text="Conversion"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hintafter"
        android:textSize="20sp"
        android:layout_above="@id/after"
        android:text="After Conversion(2-36):"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/number"
        android:textSize="30dp"
        android:layout_above="@id/hintafter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hintnumber"
        android:textSize="20sp"
        android:layout_above="@id/number"
        android:text="Pending Conversion Number:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/before"
        android:inputType="number"
        android:textSize="30dp"
        android:text="10"
        android:layout_above="@id/hintnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Before Conversion(2-36):"
        android:textSize="20sp"
        android:layout_above="@id/before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
